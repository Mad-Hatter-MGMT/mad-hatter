{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "ES2020",
        "lib": ["es2020"],
        "sourceMap": true,
        "outDir": "./dist/",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "inlineSources": true,
        "sourceRoot": "/"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
